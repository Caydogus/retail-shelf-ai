# Auto detect text files and perform LF normalization
* text=auto

# Python
*.py text eol=lf
*.pyx text eol=lf
*.ipynb text eol=lf

# JavaScript
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# Shell scripts
*.sh text eol=lf
*.ps1 text eol=crlf

# Docker
Dockerfile text eol=lf
*.dockerignore text eol=lf

# Configs
*.yml text eol=lf
*.yaml text eol=lf
*.ini text eol=lf
*.env text eol=lf
*.md text eol=lf

# Binary files
*.pt binary
*.pth binary
*.onnx binary
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.pdf binary
